        <!--android:layout_height="wrap_content"-->
        <!--android:text="扫码"-->
        <!--android:layout_marginTop="200px"-->
        <!--android:gravity="center"-->
        <!--android:textColor="#000"-->
        <!--android:textSize="46px" />-->

</LinearLayout>